<section class="panel panel-default">
    <div class="panel-heading">
        <h4>Create a new car</h4>
    </div>
    <div class="panel-body">
        <form action="/cars/{{car.id}}" method="POST">
            <input type="hidden" value="PUT" name="_method" >
            <div class="form-group">
                <input type="text" name="driver_name" class="form-control" placeholder="Driver name" value="{{car.driver_name}}">
            </div>

            <div class="form-group">
                <input type="text" name="license_plate" class="form-control" placeholder="License Plate" value="{{car.license_plate}}">
            </div>
            <div class="form-group">
                <select name="status" id="">
                    {{#equals car.status 'IN'}}
                        <option value="IN"> Inside</option>
                        <option value="OUT"> Outside</option>
                        <option value="-1" selected> Choose an option</option>
                    {{/equals}}

                    {{#equals car.status 'OUT'}}
                        <option value="OUT"> Outside</option>
                        <option value="IN"> Inside</option>
                        <option value="-1" selected> Choose an option</option>

                    {{/equals}}

                </select>

            </div>

            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-success">
            </div>
        </form>

    </div>

</section>